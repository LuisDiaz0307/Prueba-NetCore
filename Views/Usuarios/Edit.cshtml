@model Practica_asp.net.Models.Usuario

<h2>Editar Usuario</h2>
<hr />
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" /> @* ¡MUY IMPORTANTE! *@

    <div class="form-group mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="FechaNacimiento"></label>
        <input asp-for="FechaNacimiento" type="date" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Clave"></label>
        <input asp-for="Clave" type="password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>